<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\ \n About RSAMI"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\ \n--> RSAMI, Pune - Over the Years"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <com.example.sougataghosh.navstart.ExpandableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hisRSI_ID"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\ \n--> Affiliations"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <com.example.sougataghosh.navstart.ExpandableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/affiliations_ID"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\ \n--> Membership Rules"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                />

            <com.example.sougataghosh.navstart.ExpandableTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/membershipRules_ID"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                />

            <!--

            -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="Go Back"
                android:textColor="#F7D00c"
                android:id="@+id/back_1"/>


        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>